WSRESTFUL linsite DESCRIPTION 'endpoint  Linha Site API' FORMAT "application/json,text/html"
    WSDATA Page                   AS INTEGER OPTIONAL
    WSDATA aQueryString      AS ARRAY    OPTIONAL
    
 	WSMETHOD GET LinList;
	    DESCRIPTION "Retorna uma lista com a Linha Site";
	    WSSYNTAX "/api/sti/linsite" ;
        PATH "/api/sti/linsite" ;
	    PRODUCES APPLICATION_JSON
 	
END WSRESTFUL
