User Function LJ7012

	Local aRet		:= {'Total', 9}
	Local oDlgPrin	:= GetWndDefault()
	Local oTmpScrBox
	Local oTmpGridP	
	Local nX		:= 0
	
	lLayAway := .F. /* Usado para bloquear a condição de pagamento */
	
