User Function SF12A04X()
	
	Local nPosVlrUnit := GdFieldPos('LR_VRUNIT')
	Local nPosVlrItem := GdFieldPos('LR_VLRITEM')
	Local nVlrTotGT	  := 0
	Local nX		  := 0
	Local cFormGT  	  := GetNewPar('MV_XFORMGT', 'GT') // Forma de Pagamento Gratuito.
			
	For nX := 1 to Len(aCols)
	
		If aCols[nX][nPosVlrUnit] = 0.01 .and. .not. GDDeleted(nX)
			nVlrTotGT += aCols[nX][nPosVlrItem]
		EndIf
		
	Next
	
	If nVlrTotGT > 0
		U_SF12A03X(dDataBase, cFormGT, nVlrTotGT, /*p_aAdmCH*/, /*p_nOpc*/)
	EndIf
	
Return